{
  "api": {
    "baseUrl": "PLACEHOLDER_LAMBDA_API_URL",
    "timeout": 10000,
    "fallbackUrl": "http://localhost:3000",
    "note": "baseUrl will be automatically set to AWS API Gateway URL after Lambda deployment"
  },
  "topology": {
    "canvas": {
      "defaultLayout": "force-directed",
      "layouts": [
        "force-directed",
        "hierarchical",
        "circular",
        "grid"
      ],
      "maxNodes": 1000,
      "animationDuration": 300
    },
    "controls": {
      "defaultDepth": 2,
      "maxDepth": 5,
      "defaultDirection": "children",
      "directions": ["children", "parents", "both"]
    }
  },
  "ui": {
    "theme": "light",
    "animations": true,
    "autoRefresh": false,
    "refreshInterval": 300000
  },
  "devices": {
    "itemsPerPage": 50,
    "maxItemsPerPage": 200,
    "virtualScrolling": true
  }
}